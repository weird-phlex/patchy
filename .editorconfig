# EditorConfig documentation: https://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# CAUTION: carset doesn't work yet on VS Code extension according to plugin description
[*.{rb,erb,rake,js,json}]
charset = utf-8
indent_style = space
indent_size = 2
